# The Fede - Personal AI Assistant Configuration

# === REQUIRED SETTINGS ===
# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your personal Telegram user ID (for single-user mode)
# Get it by messaging @userinfobot on Telegram
TELEGRAM_USER_ID=your_user_id_here

# === CLAUDE SETTINGS ===
# Anthropic API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens per response
CLAUDE_MAX_TOKENS=4096

# === MCP SERVER SETTINGS (Future) ===
# Enable MCP server integration
ENABLE_MCP=false

# Gmail MCP server configuration
MCP_GMAIL_ENABLED=false
MCP_GMAIL_CREDENTIALS_PATH=

# Google Calendar MCP server configuration  
MCP_CALENDAR_ENABLED=false
MCP_CALENDAR_CREDENTIALS_PATH=

# Custom Todo MCP server configuration
MCP_TODO_ENABLED=false
MCP_TODO_API_URL=
MCP_TODO_API_KEY=

# === STORAGE SETTINGS ===
# SQLite database path for session persistence
DATABASE_PATH=./data/fede.db

# Session timeout in hours (0 = no timeout)
SESSION_TIMEOUT_HOURS=0

# === BEHAVIOR SETTINGS ===
# Enable verbose confirmations before actions
REQUIRE_EXPLICIT_CONFIRMATION=true

# Enable learning mode (suggest defaults after patterns)
ENABLE_LEARNING_MODE=true

# Number of times a pattern must occur before suggesting as default
LEARNING_THRESHOLD=3

# === DEVELOPMENT SETTINGS ===
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode for detailed logging
DEBUG=false